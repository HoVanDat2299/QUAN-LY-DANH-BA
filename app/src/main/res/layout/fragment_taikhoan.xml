<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaikhoanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/animationView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/accounticon"
            />
        <TextView
            android:id="@+id/textNameTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_portrait_black_24dp"
            android:text="Name admin" />

        <TextView
            android:id="@+id/textSDTTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_sim_card_black_24dp"
            android:ems="10"
            android:inputType="phone" />

        <Button
            android:id="@+id/buttonTaikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f"
            android:text="Tài khoản" />

    </LinearLayout>
</FrameLayout>