<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTiet_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/avatar_chitiet"
                android:src="@drawable/user"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên danh bạ"
                android:id="@+id/txt_ten_db">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:id="@+id/txt_sdt_db">
            </TextView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            >
            <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_like"
                android:src="@drawable/heart"
            android:text="Like"
            />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_call_24dp"
            android:background="#E43A3A"
            android:id="@+id/btn_goi"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#39D540"
            android:src="@drawable/ic_chat_black_24dp"
            android:id="@+id/btn_nhantin"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <info.androidhive.fontawesome.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_mail_bulk_solid"
                app:solid_icon="true"
                android:textAlignment="center"
                android:layout_weight="3"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_weight="1"
                android:id="@+id/txt_mail_db"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <info.androidhive.fontawesome.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_calendar"
                app:solid_icon="true"
                android:textAlignment="center"
                android:layout_weight="3"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh"
                android:layout_weight="1"
                android:id="@+id/txt_ngaysinh_db"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <info.androidhive.fontawesome.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fa_home_solid"
                app:solid_icon="true"
                android:textAlignment="center"
                android:layout_weight="3"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Địa chỉ"
                android:id="@+id/txt_diachi_db"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>